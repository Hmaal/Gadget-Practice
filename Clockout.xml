		<UserPref name="learnedToday" display_name="What did you learn today?" height="200" />
		<UserPref name="codeNotesOpt" display_name="Any code snippets today?" datatype="bool" default_value="false" required="true" />
		
		<Content type="html">
			<![CDATA[ 
				<script type='text/javascript'>
					
					var pref = new gadgets.Prefs();
					//var prefUserName = prefs.getBool("BoolPrefName");
					var prefLearnedToday = prefs.getString("StringPrefName");
				  	var prefCondeNotesOpt = prefs.getBool('codeNotesOpt');
					  
					var html = "";
					
					function getDateInfo()
					{
						var today = new Date();
						
						var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
						var week = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
						
						var time = today.getTime();
						var month = months[today.getMonth()];
						var date = today.getDate().toString();
						var weekDay = week[today.getDay()];
						
						//var html = ""; //<!DOCTYPE HTML>
						html += " <b> Hello, World! </b> <br/> <br/>";
						html += " Today is " + weekDay + " " + month + " " + date + ".";
						
						var cdata = document.getElementById('cdata');
						cdata.innerHTML = html;
					}
					
					gadgets.util.registerOnLoadHandler(getDateInfo);
					
				</script>
				
				<div id='cdata'> </div>
				
			]]>
